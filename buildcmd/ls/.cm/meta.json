{
    "cmd_template": "<<<drier>>> <<<before_cmd>>> ls <<<options >>> <<<files >>> <<<after_cmd>>>",
    "build_map": {
        "dry_run": {
            "yes": {
                "drier": "echo"
            }
        },
        "velociti": {
            "yes": {
                "before_cmd": "ssh velociti '",
                "after_cmd": "'"
            }
        },
        "mode": {
            "long": {
                "options": "-l"
            },
            "short": {
                "options": "-s"
            },
            "single": {
                "options": "-1"
            },
            "one": {
                "options": "-1"
            }
        },
        "home": {
            "yes": {
                "files": "~"
            }
        }
    }
}
